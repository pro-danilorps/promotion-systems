<h3> Busca de cupons</h3>
<%= link_to 'Voltar', promotions_path %>
<hr>
<%= form_with url: coupons_search_path, method: :get do |form| %>
  <%= form.label :query, "Buscar por:" %>
  <%= form.text_field :query %>
  <%= form.submit "Buscar" %>
<% end %>
<%= "Nenhum cupom encontrado!" if @coupon == nil && params[:commit] ==  'Buscar' %>
<% if @coupon != [] && @coupon != nil %>
  <h4> <%= @coupon.code %> </h4>
    <dl>
      <dt>Promoção</dt>
      <dd><%= @coupon.promotion.name %></dd>
      <dt>Estado</dt>
      <dd><%=Coupon.human_attribute_name("status.#{@coupon.status}")%></dd>
      <dt>Ações</dt>
      <dd>
        <% if @coupon.active?%>
          <%= link_to 'Desabilitar', disable_coupon_path(@coupon), method: :post %>
        <% end %>
        <% if @coupon.disabled?%>
          <%= link_to 'Ativar', activate_coupon_path(@coupon), method: :post %>
        <% end %>
      </dd>
    </dl>
<% end %>