<h3> Busca de cupons</h3>
<%= link_to 'Voltar', promotions_path %>
<hr>
<%= form_with url: coupons_search_path, method: :get do |form| %>
  <%= form.label :query, "Buscar por:" %>
  <%= form.text_field :query %>
  <%= form.submit "Buscar" %>
<% end %>
<% if @coupon != [] && @coupon != nil %>
  <br>
  <h4> Cupons Gerados: </h4>
    <table>
      <tr>
      <th><%= Promotion.human_attribute_name(:code) %></th>
      <th>Estado</th>
      <th>Ações</th>
      </tr>
      <tr id="coupon-<%= @coupon.code.parameterize%>">
      <td><%=@coupon.code%></td>
      <td><%=Coupon.human_attribute_name("status.#{@coupon.status}")%></td>
      <td>
        <% if @coupon.active?%>
          <%= link_to 'Desabilitar', disable_coupon_path(@coupon), method: :post %>
        <% end %>
        <% if @coupon.disabled?%>
          <%= link_to 'Ativar', activate_coupon_path(@coupon), method: :post %>
        <% end %>
      </td>
      </tr>
      </table>
<% end %>