<h3>Editando <%=@product_category.name%> </h3>
<%= link_to 'Voltar', product_category_path(@product_category) %>
<hr>
<% if @product_category.errors.any? %>
<ul>
<% @product_category.errors.full_messages.each do |message| %>
  <li><%= message %></li>
<% end %>
</ul>
<% end %>
<%= render "form", submit_text: 'Confirmar Alterações', product_category: @product_category%>